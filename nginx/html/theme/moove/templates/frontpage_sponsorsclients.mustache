{{!
    @template theme_moove/frontpage_sponsorsclients

    Blocks drawer template

    Example context (json): {
        "sponsorsfrontpage": true,
        "sponsorstitle": "The sponsors area title",
        "sponsorssubtitle": "The sponsors area subtitle",
        "sponsors": [
            {
                "url": "https://sponsorurl...",
                "image": "https://sponsorurl..."
            }
        ],
        "clientsfrontpage": true,
        "clientstitle": "The clients area title",
        "clientssubtitle": "The clients area subtitle",
        "clients": [
            {
                "url": "https://clientrurl...",
                "image": "https://clientrurl..."
            }
        ]
    }
}}
{{#sponsorsfrontpage}}
    <div class="container frontpage-sponsors">
        <h2>{{{sponsorstitle}}}</h2>
        <p>{{{sponsorssubtitle}}}</p>
        <div class="row">
            {{#sponsors}}
            <div class="item">
                <a href="{{{url}}}">
                    <img src="{{{image}}}" title="{{{url}}}"/>
                </a>
            </div>
            {{/sponsors}}
        </div>
    </div>
{{/sponsorsfrontpage}}
{{#clientsfrontpage}}
    <div class="container frontpage-clients">
        <h2>{{{clientstitle}}}</h2>
        <p>{{{clientssubtitle}}}</p>
        <div class="row">
            {{#clients}}
                <div class="item">
                    <a href="{{{url}}}">
                        <img src="{{{image}}}" title="{{{url}}}"/>
                    </a>
                </div>
            {{/clients}}
        </div>
    </div>
{{/clientsfrontpage}}